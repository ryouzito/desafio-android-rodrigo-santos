<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeButtonCharacter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_button_white"
    android:padding="9dp">

    <TextView
        android:id="@+id/textViewPersonagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/imageViewPersonagem"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/textViewPersonagem"
        android:adjustViewBounds="true"
        android:contentDescription="@string/imagem_do_personagem"
        app:srcCompat="@drawable/marvel_logo" />

</RelativeLayout>